<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tampilandaftar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animasi"
    tools:context=".daftar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bpbd" />

        <TextView
            android:id="@+id/namaaplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Aplikasi Penyaluran Bantuan Bencana"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/background_light"
            app:fontFamily="@font/asap_bold_italic" />

        <TextView
            android:id="@+id/namadaftar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="DAFTAR"
            android:textColor="@android:color/background_light"
            app:fontFamily="@font/asap_bold_italic" />


        <ImageButton
            android:id="@+id/tambahfoto"
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/cerclebackgroundwhite"
            app:srcCompat="@drawable/addblack" />

        <TextView
            android:id="@+id/namatambahfoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tambah foto profil"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#94FFFFFF"
                android:inputType="textPersonName"
                android:hint="nama"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/namapengguna"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#94FFFFFF"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="nama pengguna / email"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#94FFFFFF"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="alamat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nohp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#94FFFFFF"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="nomor HP"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/katasandi"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#94FFFFFF"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="Password"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/background_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/ketikulangkatasandi"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:background="#94FFFFFF"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="password"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/loading"
            style="@android:style/Widget.Holo.Light.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/tomboldaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A50A33"
            android:text="DAFTAR"
            android:onClick="btnmasuk"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="35dp"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>